@{
    ViewData["Title"] = "Employee Add";
}

<form asp-controller="Employee" asp-action="AddEmployee" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="LastName">LastName</label>
            <input class="form-control" id="inputLastName" name="LastName" placeholder="LastName">
        </div>
        <div class="form-group col-md-6">
            <label for="FirstName">FirstName</label>
            <input class="form-control" id="inputFirstName" name="FirstName" placeholder="FirstName">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="City">City</label>
            <input type="text" class="form-control" id="inputCity" name="City" placeholder="City">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
